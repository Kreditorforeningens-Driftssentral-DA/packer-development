# https://ubuntu.com/server/docs/install/autoinstall-quickstart
#cloud-config
---
autoinstall:
  version: 1
  locale: en_US
  keyboard:
    layout: en
    variant: us
  identity:
    hostname: ubuntu
    username: packer
    password: packer
  network:
    network:
      version: 2
      ethernets:
        ens33:
          dhcp4: true
  storage:
    layout:
      name: lvm
  ssh:
    install-server: true
    allow-pw: yes
  user-data:
    disable-root: false
  late-commands:
    - 'sed -i "s/dhcp4: true/&\n      dhcp-identifier: mac/" /target/etc/netplan/00-installer-config.yaml'
    - echo 'packer ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/packer
...